@model IEnumerable<Continental.CUP.Repositories.ViewModels.UserVModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de usuarios</h2>
<!-- ---------------------------------------------------------------USER-------------------------------------------------------- -->
<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
</p>
<table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.FirtsName)</th>
            <th data-hide="phone"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.LastName)</th>
            <th data-hide="phone"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.UserName)</th>
            <th data-hide="phone"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirtsName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @if (Continental.CUP.Web.Classes.HelperAction.IsValid("User", "Edit"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.UserID">Editar- @item.UserID</a> @Html.Raw("|")
                    }
                    @if (Continental.CUP.Web.Classes.HelperAction.IsValid("User", "Details"))
                    {
                        <a asp-action="Details" asp-route-id="@item.UserID">Detalles- @item.UserID</a> @Html.Raw("|") 
                    }
                    @if (Continental.CUP.Web.Classes.HelperAction.IsValid("User", "Delete"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.UserID">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Header {
    <link href="~/js/plugin/datatables/update/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="~/js/plugin/datatables/update/css/jquery.dataTables.min.css" rel="stylesheet" />
}

@section Scripts {
    <script type="text/javascript" src="~/js/cup.js"></script>
}
