@model IEnumerable<Continental.CUP.Repositories.ViewModels.LocationVModel>

<h2>Lista de Localidades</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo</a>
</p>
<table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
    <thead>
        <tr>
            <th data-class="expand"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> @Html.DisplayNameFor(model => model.Name)</th>
            <th data-hide="phone"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (Continental.CUP.Web.Classes.HelperAction.IsValid("Location", "Edit"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.LocationID">Editar</a> @Html.Raw("|")
                    }
                    @if (Continental.CUP.Web.Classes.HelperAction.IsValid("Location", "Details"))
                    {
                        <a asp-action="Details" asp-route-id="@item.LocationID">Detalles</a> @Html.Raw("|")
                    }
                    @if (Continental.CUP.Web.Classes.HelperAction.IsValid("Location", "Delete"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.LocationID">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Header {
    <link href="~/js/plugin/datatables/update/css/buttons.dataTables.min.css" rel="stylesheet" />
    <link href="~/js/plugin/datatables/update/css/jquery.dataTables.min.css" rel="stylesheet" />
}

@section Scripts {
    <script type="text/javascript" src="~/js/cup.js"></script>
}


